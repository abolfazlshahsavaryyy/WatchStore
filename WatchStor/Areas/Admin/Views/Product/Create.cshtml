@model WatchStor.Models.Product

@{
    ViewData["Title"] = "Create New Product";
}

<div class="container mt-4">
    <h2>Create New Product</h2>

    <form asp-action="Create" enctype="multipart/form-data" method="post" class="mt-3">
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Brand" class="form-label"></label>
            <input asp-for="Brand" class="form-control" />
            <span asp-validation-for="Brand" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Gender" class="form-label"></label>
            <select asp-for="Gender" class="form-select">
                <option value="">Select Gender</option>
                <option value="0">Male</option>
                <option value="1">Female</option>
                <option value="2">Unisex</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
        @* classic=0,
        sport=1,
        kid=2, *@
        <div class="mb-3">
            <label asp-for="WatchType" class="form-label"></label>
            <select asp-for="WatchType" class="form-select">
                <option value="">Select Type</option>
                <option value="0">classic</option>
                <option value="1">sport</option>
                <option value="2">Kid</option>
            </select>
            <span asp-validation-for="WatchType" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="file">Upload Image</label>
            <input type="file" name="file" id="file" class="form-control" />
        </div>

        <button type="submit" class="btn btn-success">Create</button>
        <a class="btn btn-primary" asp-area="Admin" asp-controller="Product" asp-action="Index">return to index page</a>
    </form>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
