@model IEnumerable<WatchStor.Models.Product>

@{
    ViewData["Title"] = "Product List";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h2>Product List</h2>
        </div>
        <div class="col text-end">
            <a asp-area="Admin" asp-controller="Product" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Create New Product
            </a>
        </div>
    </div>

    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Brand</th>
                <th>Price</th>
                <th>Gender</th>
                <th>Type</th>
                <th>operator</th>
                <th>Image URL</th>
               

            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                int counter = 1;
                foreach (var product in Model)
                {
                    <tr>
                        <td>@counter</td>
                        <td>@product.Name</td>
                        <td>@product.Brand</td>
                        <td>@product.Price.ToString("C")</td> <!-- Currency format -->
                        <td>@product.Gender.ToString()</td>
                        <td>@product.WatchType.ToString()</td>
                        <td>
                            <a asp-area="Admin" asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id"  class="btn btn-dark">edit</a>
                            <a asp-area="Admin" asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">delete</a>
                            <a asp-area="Admin" asp-controller="Product" asp-action="Read" asp-route-id="@product.Id" class="btn btn-secondary">Read</a>

                        </td>
                        <td>@product.ImageURL</td>
                        
                    </tr>
                    counter++;
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center text-danger">No products available</td>
                </tr>
            }
        </tbody>
    </table>
</div>
