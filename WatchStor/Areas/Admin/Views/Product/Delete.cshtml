@{
}
@model WatchStor.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-4">
    <h2>Create New Product</h2>

    <form asp-action="Delete" method="post" class="mt-3">
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input readonly asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Brand" class="form-label"></label>
            <input readonly asp-for="Brand" class="form-control" />
            <span asp-validation-for="Brand" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label"></label>
            <input readonly asp-for="Price" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Gender" class="form-label"></label>
            <input readonly asp-for="Gender" class="form-control" type="text" step="0.01" />
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="WatchType" class="form-label"></label>
            <input readonly asp-for="WatchType" class="form-control" type="text" step="0.01" />
            <span asp-validation-for="WatchType" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Delete</button>
        <a class="btn btn-primary" asp-area="Admin" asp-controller="Product" asp-action="Index">Return to Index page</a>
    </form>

</div>


