@model Pay




<div class="container mt-4">
    <h2>Create a New Pay</h2>
    <form asp-action="" method="post">
        <div class="form-group">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" readonly class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Time" class="control-label"></label>
            <input asp-for="Time " readonly class="form-control" type="datetime-local" />
            <span asp-validation-for="Time" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="price" class="control-label"></label>
            <input asp-for="price" readonly class="form-control" />
            <span asp-validation-for="price" class="text-danger"></span>
        </div>

        <a class="btn btn-primary" asp-action="Index" asp-controller="Pay"  asp-area="Customer">Back to Pay list</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
