@model List<Pay>


@{
    ViewData["Title"] = "Product List";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h2>Product List</h2>
        </div>
        
    </div>

    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Title</th>
                <th>Sum</th>
                <th>Datatime pay</th>
                <th>view</th>
                
               

            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                
                foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Id</td>
                        <td>@product.Title</td>
                        <td>@product.price</td>
                        <td>@product.Time</td>
                        <td>
                            <a class=" btn btn-light"asp-controller="Pay" asp-action="Read" asp-route-id="@product.Id" >View</a>
                        </td>
                        
                        
                    </tr>
                    }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center text-danger">No products available</td>
                </tr>
            }
        </tbody>
    </table>
</div>
