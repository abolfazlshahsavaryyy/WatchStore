@{
    ViewData["Title"] = "Home Page";
}

@model List<WatchStor.Models.Product>

<div class="container mt-4">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <!-- Use img-fluid for responsive images -->
                    <img src="@product.ImageURL" class="card-img-top img-fluid" alt="@product.Name" style="max-height: 250px; object-fit: contain;" />
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">
                            <strong>Price:</strong> $@product.Price
                        </p>
                    </div>
                    <div class="card-footer">
                        <a asp-area="Admin" asp-controller="Product" asp-action="Read" asp-route-id="@product.Id" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
