@model Order



@{
    ViewData["Title"] = "Create Order";
}

<h2>Create Order</h2>
<img src="@Model.Watch.ImageURL" style="width :300xp;hight:300xp;" />
<form asp-controller="Order" asp-action="Create" method="post" class="form-horizontal">
    <div class="form-group">
        <label asp-for="WatchId" class="control-label"></label>
        <input asp-for="WatchId" class="form-control" />
        <span asp-validation-for="WatchId" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Number" class="control-label"></label>
        <input asp-for="Number" class="form-control" />
        <span asp-validation-for="Number" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TimeOfPurchase" class="control-label"></label>
        <input asp-for="TimeOfPurchase" class="form-control" type="datetime-local" />
        <span asp-validation-for="TimeOfPurchase" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TimeOfSend" class="control-label"></label>
        <input asp-for="TimeOfSend" class="form-control" type="datetime-local" />
        <span asp-validation-for="TimeOfSend" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
